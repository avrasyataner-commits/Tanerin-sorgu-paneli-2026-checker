<script>
    const snd = document.getElementById('clickSound');
    let aud = false;
    function initAudio() { aud = true; }
    
    function playAction(msg) {
        if(aud) { snd.currentTime = 0; snd.play().catch(()=>{}); }
        const nb = document.getElementById('notify-box');
        nb.innerText = msg;
        nb.style.right = '20px';
        setTimeout(() => { nb.style.right = '-350px'; }, 2500);
    }

    function handleLogin() {
        const u = document.getElementById('userInp').value.toLowerCase() || "misafir";
        document.getElementById('auth-screen').style.display = 'none';
        document.getElementById('main-layout').style.display = 'flex';
        document.getElementById('user-display').innerText = "OTURUM: " + u.toUpperCase();
        document.getElementById('welcome-user').innerText = u.toUpperCase();
        if(u === "taner") document.getElementById('admin-panel').style.display = 'block';
        playAction('Sisteme GiriÅŸ YapÄ±ldÄ±');
    }

    function go(id, el) {
        playAction('Sayfa DeÄŸiÅŸtirildi');
        document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
        document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
        document.getElementById(id).classList.add('active');
        el.classList.add('active');
        if(id === 'ann') document.getElementById('ann-badge').style.display = 'none';
    }

    function postAnnouncement() {
        const msg = document.getElementById('annMsg').value;
        if(!msg) return;
        const list = document.getElementById('announcement-list');
        const newAnn = document.createElement('div');
        newAnn.innerHTML = `<div style="background:rgba(255,255,255,0.05); padding:15px; border-radius:10px; border-left:4px solid var(--admin-red); margin-bottom:10px;"><h4>YÃ¶netici Duyurusu (@everyone)</h4><p>${msg}</p></div>`;
        list.prepend(newAnn);
        document.getElementById('ann-badge').style.display = 'inline-block';
        document.getElementById('annMsg').value = "";
        playAction('Duyuru GÃ¶nderildi!');
    }

    function toggleFS() {
        playAction('Ekran Modu DeÄŸiÅŸti');
        if (!document.fullscreenElement) document.documentElement.requestFullscreen();
        else document.exitFullscreen();
    }

    function sim(tid, n) {
        playAction(n + ' Sorgusu BaÅŸladÄ±');
        const res = document.getElementById(tid);
        res.innerHTML = "<p style='color:var(--neon-blue); margin-top:15px;'>SorgulanÄ±yor...</p>";
        setTimeout(() => {
            res.innerHTML = `<table class="res-table"><tr><th>VERÄ°</th><th>SONUÃ‡</th></tr><tr><td>Durum</td><td>BAÅARILI</td></tr><tr><td>ID</td><td>#${Math.floor(Math.random()*9999)}</td></tr></table>`;
        }, 1000);
    }
</script>
